#!/bin/lua5.1
local cmdline = table.concat({...}," ")
local pp = require('preprocess')
pp.metaEnvironment.dataFromCommandLine = cmdline
local str, info = pp.processString({
	code=io.stdin:read("*a");
	backtickStrings=true;
	logLevel="trace";
	validate=false;
})
io.write(str)
--[[
--print(("--[======[ COMMANDLINE %s]======]"):format(cmdline))
local cmd = "process/preprocess-cl "..cmdline:sub(1,-2).." -o - /tmp/prep"
io.stderr:write("-- "..cmd)
local file = io.popen(cmd,"wb")
if file then
   file:write(stdin)
   file:close()
   file = io.open("/tmp/prep","rb")
   print(file:read("*a"))
   file:close()
end
os.execute("rm -rf /tmp/prep")
]]
